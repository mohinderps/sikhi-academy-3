generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Saakhi {
  id       String @id @default(uuid())
  title    String
  content  String
  guruJi   GuruJi @relation(fields: [guruJiId], references: [id])
  guruJiId String
  sequence Int    @unique
}

model GuruJi {
  id    String  @id @default(uuid())
  order Int     @unique
  name  String  @unique
  sakhi Saakhi[]
}